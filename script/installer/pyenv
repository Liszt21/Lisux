#!/usr/bin/env bash
#
#
if [ "$PYENV_HOME" ];then
    echo "$PYENV_HOME"
    INSTALLED=true
else
    INSTALLED=false
    if [ "$LISUX" ];then
        echo "has lisux"
        PYENV_HOME="$LISUX/apps/pyenv"
    else
        echo "doesn't has lisux"
        PYENV_HOME="$HOME/.pyenv"
    fi
fi

echo "$INSTALLED"
echo "$PYENV_HOME"

function failed_checkout() {
    echo "Failed to git clone $1"
    exit
}

checkout() {
    [ -d "$2" ] || git clone --depth 1 "$1" "$2" || failed_checkout "$1"
}

function install() {
    "$INSTALLED" && {
        echo "Pyenv was installed...exit"
        exit
    }
    printf "Installing pyenv..."
    printf "  - cloning pyenv"
    checkout https://github.com/pyenv/pyenv.git "$PYENV_HOME"
}

function uninstall() {
    printf "Uninstalling pyenv..."
    rm -rf "$PYENV_HOME"
}

case "$1" in
    [u/U]ninstall )
        uninstall
        ;;
    * )
        install
        ;;
esac
